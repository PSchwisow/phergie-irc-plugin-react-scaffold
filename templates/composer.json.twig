{
    "name": "{{composer_name}}",
    "description": "Phergie plugin for {{purpose}}",
    "keywords": [ "irc", "bot", "react", "plugin" ],
    "license": "BSD-2-Clause",
    "support": {
        "email": "team@phergie.org",
        "irc": "irc://irc.freenode.net/phergie",
        "issues": "{{github_url}}/issues",
        "source": "{{github_url}}"
    },
    "minimum-stability": "dev",
    "require": {
        "phergie/phergie-irc-bot-react": "dev-master"{% if command_plugin %},
        "phergie/phergie-irc-plugin-react-command": "dev-master"
{% endif %}

    },
    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "phake/phake": "2.0.0-beta2"
    },
{% if command_plugin %}
    "suggest": {
        "phergie/phergie-irc-plugin-react-commandhelp": "provides interactive help for commands"
    },
{% endif %}
    "autoload": {
        "psr-4": {
            "{{composer_namespace}}\\": "src"
        }
    }
}
